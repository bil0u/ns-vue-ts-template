{
    "compilerOptions": {
		"module": "commonjs",
		"target": "es5",
        "lib": [
			"dom",
			"es2015"
		],
		"sourceMap": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [ "types" ],
		"types": [ "node" ],
		"moduleResolution": "node",
		"baseUrl": ".",
        "paths": {
            "@/*": [ "app/*" ],
            "~/*": [ "app/*" ],
            "*": [
                "./types/*",
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
		}
    },
    "include": [
		"app",
		"types"
    ],
    "exclude": [
		"node_modules",
		"hooks",
        "platforms"
    ]
}
